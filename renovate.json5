{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "schedule": [
    "before 6am on Monday"
  ],
  "labels": [
    "dependencies"
  ],
  "commitMessagePrefix": "chore(deps):",
  
  // Enable uv package manager
  "pep621": {
    "enabled": true
  },
  
  "packageRules": [
    {
      "matchManagers": ["github-actions"],
      "groupName": "GitHub Actions",
      "commitMessageTopic": "github actions"
    },
    {
      // Group uv.lock updates separately
      "matchManagers": ["pep621"],
      "matchFiles": ["uv.lock"],
      "groupName": "uv lock file",
      "commitMessageTopic": "uv lock"
    },
    {
      "matchManagers": ["pep621"],
      "matchPackageNames": ["Hydro-Quebec-API-Wrapper"],
      "groupName": "Hydro-Quebec API Wrapper"
    },
    {
      "matchManagers": ["pep621"],
      "matchPackageNames": ["homeassistant"],
      "enabled": false,
      "description": "Home Assistant version is managed manually"
    },
    {
      // Group dev dependencies from pyproject.toml
      "matchManagers": ["pep621"],
      "matchDepTypes": ["dev"],
      "groupName": "development dependencies",
      "commitMessageTopic": "dev dependencies"
    }
  ],
  
  // Lock file maintenance for uv.lock
  "lockFileMaintenance": {
    "enabled": true,
    "schedule": [
      "before 6am on the first day of the month"
    ]
  },
  
  "vulnerabilityAlerts": {
    "enabled": true,
    "labels": [
      "security"
    ]
  },
  
  "separateMajorMinor": true,
  "separateMultipleMajor": true,
  "prConcurrentLimit": 5,
  "prHourlyLimit": 2,
  "automerge": false,
  "platformAutomerge": false
}
